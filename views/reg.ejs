<div id="login-area" class="container pt-3">
    <div class="row justify-content-sm-center">
      <div class="col-sm-6 col-md-4">
  
        <div class="card border-info text-center">
          <div class="card-header">
            Create New Account
          </div>
          <div class="card-body">
            <img src="/static/user.png">
            <h4 class="text-center">LibreHealth Atlas</h4>
            <% if (errormsg){ %>
                <p style="color: red;" class="text-center"><%= errormsg %> </p>
                <% } %>
            <form action="/register" method="POST"  class="form-signin">
              <input type="text" class="form-control mb-2" placeholder="Email" name="n_email" required autofocus>
              <input type="password" id="pass1" class="form-control mb-2" placeholder="Password" name="n_pass" required>
              <input type="password" id="pass2" class="form-control mb-2" placeholder="Password" name="n_pass2" required>
              <button class="btn btn-lg btn-primary btn-block mb-1" type="submit">Create Account</button>
              <p> Already Have a Account? <a href="/admin">Login Here</a> </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

